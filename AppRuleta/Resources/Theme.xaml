<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:AppRuleta.Resources"
                    xmlns:system="clr-namespace:System;assembly=mscorlib">

    <system:Double x:Key="AppFontSize">20</system:Double>

    <SolidColorBrush x:Key="PageTitleBrush" Color="#777"/>

    <Style TargetType="TextBlock">
        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
    </Style>

    <Style TargetType="TextBox">
        <Setter Property="FontSize" Value="{DynamicResource AppFontSize}"/>
    </Style>

    <Style TargetType="ListViewItem">
        <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
    </Style>

    <Style TargetType="TextBlock" x:Key="PageTitle">
        <Setter Property="FontWeight" Value="Light"/>
        <Setter Property="FontSize" Value="40"/>
        <Setter Property="Foreground" Value="{DynamicResource PageTitleBrush}"/>
        <Setter Property="Margin" Value="20"/>
    </Style>

    <Style TargetType="Button" x:Key="MenuDownButton">
        <Setter Property="FontSize" Value="16"/>
        <Setter Property="Padding" Value="10 5"/>
        <Setter Property="Margin" Value="0 10 10 10"/>
    </Style>
    
</ResourceDictionary>